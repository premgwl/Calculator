<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- ... Other states ... -->

    <!-- Default State -->
    <item>
        <layer-list>
            <!-- White background. -->
            <item>
                <shape>
                    <solid android:color="@android:color/white" />
                    <corners android:radius="16dp" /> <!-- Adjust the radius for smoother corners -->
                </shape>
            </item>
            <!-- Gray shadow. -->
            <item
                android:left="3dp"
                android:top="5dp"
                android:bottom="-4dp">
                <shape>
                    <solid android:color="@android:color/darker_gray" />
                    <corners android:radius="24dp" /> <!-- Adjust the radius for smoother corners -->
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
