
<resources>
<style name="CalculatorButton" parent="Widget.AppCompat.Button">
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_columnWeight">1</item>
    <item name="android:layout_rowWeight">1</item>
    <item name="android:textColor">#7A7876</item>
    <item name="android:textSize">24sp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:layout_margin">8dp</item>
    <item name="backgroundTint">#D9D9D9</item>
    <item name="android:padding">16dp</item>
    <item name="android:elevation">8dp</item>
    <item name="android:stateListAnimator">@null</item>

    <!-- Use different background drawables for circular buttons and '0' button -->
    <item name="android:background">@drawable/calculator_button_circular_background</item>
    <item name="android:layout_columnSpan">1</item> <!-- Default span -->
</style>

<style name="CalculatorButton.Rounded" parent="CalculatorButton">
    <item name="android:background">@drawable/calculator_button_rounded_background</item>
    <item name="android:layout_columnSpan">2</item> <!-- Span two columns -->
</style>
</resources>
